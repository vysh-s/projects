{
  "manifest_version": 3,
  "name": "Brainrot Buster",
  "version": "1.0.0",
  "description": "AI-powered mindful scrolling companion that detects doomscrolling and provides productive interventions",
  "permissions": [
    "activeTab",
    "storage",
    "idle",
    "alarms"
  ],
  "host_permissions": [
    "*://twitter.com/*",
    "*://x.com/*",
    "*://instagram.com/*",
    "*://tiktok.com/*",
    "*://reddit.com/*",
    "*://youtube.com/*",
    "*://linkedin.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://twitter.com/*",
        "*://x.com/*",
        "*://instagram.com/*",
        "*://tiktok.com/*",
        "*://reddit.com/*",
        "*://youtube.com/*",
        "*://linkedin.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Brainrot Buster"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["*://*/*"]
    }
  ]
}